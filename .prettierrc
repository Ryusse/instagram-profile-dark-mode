{
  "singleQuote": true,
  "semi": false,
  "printWidth": 120,
  "trailingComma": "es5",
  "editor.formatOnSave": true,
  "endOfLine": "auto",
  "tabWidth": 2,
  "jsxSingleQuote": true,
  "arrowParens": "always",
  "bracketSameLine": false,
  "space-before-function-paren": true,
  "overrides": [
    {
        "files": ["**/*.css", "**/*.scss", "**/*.html"],
        "options": {
            "singleQuote": false
        }
    }
    ]
}